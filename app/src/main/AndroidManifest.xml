<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.antiochwheaton">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".Sermons">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Blog" />
        <activity android:name=".PodcastDetail"></activity>
        <provider
            android:authorities="com.example.android.antiochwheaton"
            android:name="com.example.android.antiochwheaton.data.AntiochProvider"
            android:exported="false"/>
        <service android:name=".sync.AntiochSyncIntentService"
            android:exported="false"/>
        <service android:name=".sync.AntiochFirebaseJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdspatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>
    </application>

</manifest>