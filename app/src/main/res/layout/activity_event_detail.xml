<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.android.antiochwheaton.EventDetail">


            <ImageView
                android:id="@+id/ivEventDetailImage"
                android:layout_width="368dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/tvEventDetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ivEventDetailImage"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="20sp"
                tools:text="Friend of God: 21 Days in the Gospel of John"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/tvEventDetailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvEventDetailTitle"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                tools:text="August 27, 2017 10:00am - 11:30am"/>

            <TextView
                android:id="@+id/tvEventDetailContent"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:text="In John 1 Jesus extends an invitation that has never been withdrawn. In His invitation he simply said, "
                app:layout_constraintTop_toBottomOf="@+id/tvEventDetailDate"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/tvEventDetailLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvEventDetailContent"
                android:layout_marginTop="10dp"
                tools:text="Franklin Middle School Wheaton, IL"/>

        </android.support.constraint.ConstraintLayout>
</layout>
