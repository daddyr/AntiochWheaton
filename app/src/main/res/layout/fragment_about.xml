<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:id="@+id/imageView" />
    <TextView
        android:id="@+id/love_god"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love God."
        android:textSize="30sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <TextView
        android:id="@+id/love_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love People."
        android:textSize="30sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/love_god"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/love_god" />

    <TextView
        android:id="@+id/love_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change The World."
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/love_people"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/love_people" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday Mornings 10am, Franklin MIddle School "
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:id="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="211 E. Franklin Ave., Wheaton, IL"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:id="@+id/textView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>