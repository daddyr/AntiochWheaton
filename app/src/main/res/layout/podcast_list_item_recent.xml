<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagePodcast"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Colossians 1"
        app:layout_constraintLeft_toRightOf="@+id/imagePodcast"
        android:layout_marginLeft="10dp"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="@+id/imagePodcast"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="June 18th, 2017"
        android:textSize="15sp"
        app:layout_constraintRight_toLeftOf="@+id/textTitle"
        app:layout_constraintLeft_toRightOf="@+id/textTitle"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textAuthor"
        app:layout_constraintHorizontal_bias="0.496" />

    <TextView
        android:id="@+id/textAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Gwen Meyers"
        android:textSize="15sp"
        app:layout_constraintRight_toLeftOf="@+id/textTitle"
        app:layout_constraintLeft_toRightOf="@+id/textTitle"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbb"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imagePodcast" />

</android.support.constraint.ConstraintLayout>