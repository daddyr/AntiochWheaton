<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagePodcast"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Colossians 1"
        app:layout_constraintLeft_toRightOf="@+id/imagePodcast"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/imagePodcast"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="June 18th, 2017"
        app:layout_constraintBottom_toBottomOf="@+id/imagePodcast"
        android:layout_marginBottom="8dp"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/textTitle" />

    <TextView
        android:id="@+id/textAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Gwen Meyers"
        app:layout_constraintLeft_toRightOf="@+id/textDate"
        android:layout_marginLeft="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/textDate"
        android:layout_marginBottom="1dp"
        android:textSize="10sp"
        android:layout_marginStart="26dp" />

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="#bbb"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/imagePodcast"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>